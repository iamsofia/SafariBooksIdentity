@model IdentityTemplate.Models.Coupon

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Coupon</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.CouponID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CouponID)
                @Html.ValidationMessageFor(model => model.CouponID)
            </div>
        </div>

        <div class="accordion" id="accordion2">
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
                        Free Shipping on All Orders
                    </a>
                </div>
                <div id="collapseOne" class="accordion-body collapse">
                    <div class="accordion-inner">

                        <div class="form-group">
                            @Html.LabelFor(model => model.FreeShipAll, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.FreeShipAll)
                                @Html.ValidationMessageFor(model => model.FreeShipAll)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseTwo">
                        Conditional Free Shipping
                    </a>
                </div>
                <div id="collapseTwo" class="accordion-body collapse">
                    <div class="accordion-inner">

                        <div class="form-group">
                            @Html.LabelFor(model => model.FreeShipIf, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.FreeShipIf)
                                @Html.ValidationMessageFor(model => model.FreeShipIf)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.OrderThreshold, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.OrderThreshold)
                                @Html.ValidationMessageFor(model => model.OrderThreshold)
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseThree">
                        Total Discount Coupons
                    </a>
                </div>
                <div id="collapseThree" class="accordion-body collapse">
                    <div class="accordion-inner">

                        <div class="form-group">
                            @Html.LabelFor(model => model.DiscountTotal, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.DiscountTotal)
                                @Html.ValidationMessageFor(model => model.DiscountTotal)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Discount, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Discount)
                                @Html.ValidationMessageFor(model => model.Discount)
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
